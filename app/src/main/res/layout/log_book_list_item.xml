<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="88dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/log_book_list_item_wrapper"
    android:orientation="horizontal"
    tools:background="#000000">

    <!--android:background="@color/colorLogBookListItemBkgd"-->

    <LinearLayout
        android:layout_width="38dp"
        android:layout_height="88dp"
        android:id="@+id/layout_spot">

        <TextView
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:background="#FFFFFF"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="40dp"
            android:layout_marginRight="15dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:id="@+id/log_book_list_item_icon_wrapper"
        android:layout_toRightOf="@id/layout_spot">

        <TextView
            android:id="@+id/log_book_list_item_icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            tools:text="8a"
            android:textSize="36sp"
            android:textColor="#FFFFFF"/>

    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/log_book_list_item_icon_wrapper">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:id="@+id/log_book_list_item_title"
            android:textAppearance="?android:textAppearanceLarge"
            android:gravity="bottom"
            tools:text="header"
            android:textColor="#FFFFFF"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:layout_below="@id/log_book_list_item_title"
            android:id="@+id/log_book_list_item_info1"
            tools:text="info1"
            android:textAppearance="?android:textAppearanceSmall"
            android:textColor="#FFFFFF"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:layout_below="@id/log_book_list_item_info1"
            android:id="@+id/log_book_list_item_info2"
            tools:text="info2"
            android:textAppearance="?android:textAppearanceSmall"
            android:textColor="#FFFFFF"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:layout_below="@id/log_book_list_item_info2"
            android:id="@+id/log_book_list_item_info3"
            tools:text="info3"
            android:textAppearance="?android:textAppearanceSmall"
            android:textColor="#FFFFFF"/>

    </RelativeLayout>

</RelativeLayout>