<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/log_book_list_item_wrapper"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp"
    tools:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/log_book_list_item_title"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:gravity="bottom"
            android:textAppearance="?android:textAppearanceLarge"
            android:textColor="#000000"
            tools:text="header" />

        <ImageView
            android:id="@+id/trophy_icon"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:padding="4dp"
            android:scaleType="centerInside"
            android:src="@drawable/icon_trophy" />

        <TextView
            android:id="@+id/trophy_text"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:text="FA"
            android:gravity="center"
            android:textAppearance="?android:textAppearanceMedium" />

    </LinearLayout>

    <TextView
        android:id="@+id/list_item_divider"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/colorClimbingItemsV2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/log_book_list_item_icon_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_weight="0"
            android:padding="12dp"
            android:scaleType="centerInside"
            tools:src="@drawable/icons_drawstringbag96" />

        <TextView
            android:id="@+id/log_book_list_item_icon"
            android:layout_width="70dp"
            android:layout_height="80dp"
            android:layout_weight="0"
            android:gravity="center"
            android:textSize="24sp"
            android:textColor="#000000"
            tools:text="5.13" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/log_book_list_item_info1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="#000000"
                tools:text="info1" />

            <TextView
                android:id="@+id/log_book_list_item_info2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="#000000"
                tools:text="info2" />

            <TextView
                android:id="@+id/log_book_list_item_info3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="#000000"
                tools:text="info3" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>