<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.android.anothertest.LogBook">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:background="#1c1c1c" />

    <!--android:src="@drawable/background_matterhorn"-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="4dp"
        android:id="@+id/layout_header">

        <Button
            android:id="@+id/button_previous_day"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="0"
            android:text="b"
            android:background="#902b27ba"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/textview_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center"
            android:text="Today"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"/>

        <Button
            android:id="@+id/button_next_day"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginBottom="8dp"
            android:layout_weight="0"
            android:text="f"
            android:background="#902b27ba"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="16dp"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_below="@id/layout_header"
        android:orientation="vertical">

        <Button
            android:id="@+id/button_log_climb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Log Climb"
            android:layout_alignParentBottom="true"
            android:background="#902b27ba"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_marginTop="4dp"
            android:textSize="16dp" />

        <Button
            android:id="@+id/button_add_workout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center"
            android:text="Add Workout"
            android:layout_above="@id/button_log_climb"
            android:background="#902b27ba"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_marginTop="8dp"
            android:textSize="16dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/button_add_workout">

            <TextView
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="#FFFFFF"
                android:layout_marginLeft="18dp"/>

            <ListView
                android:id="@+id/log_book_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="insert listview here" />

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>